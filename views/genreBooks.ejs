<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/node.svg" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/essentials.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <nav>
      <a href="/"><button>Home</button></a>
      <a href="/books"><button>All Books</button></a>
      <a href="/genres"><button>All Genres</button></a>
    </nav>
    <nav>
      <h3><%= genreName %></h3>
      <a href="/genres/<%= genreId %>/update"><button>Edit</button></a>
      <a href="/genres/<%= genreId %>/delete"><button>Delete</button></a>
    </nav>
    <div class="grid">
      <% books.forEach(book => { %>
      <a href="/books/<%= book.book_id %>/view">
        <div class="grid-item">
          <label> <div class="heading"><%= book.title %></div></label>
          <label> <div><%= book.author %></div></label>
          <label> <div><%= book.genre %></div></label>
          <label> <div><%= book.price %></div></label>
          <label> <div><%= book.stock %> left</div></label>
        </div>
      </a>
      <% }) %>
    </div>
  </body>
</html>
